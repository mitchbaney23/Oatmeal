{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@oatmeal/*": ["packages/*/src"],
      "@oatmeal/ui": ["packages/ui/src"],
      "@oatmeal/audio-core": ["packages/audio-core/src"],
      "@oatmeal/transcribe": ["packages/transcribe/src"],
      "@oatmeal/diarize": ["packages/diarize/src"],
      "@oatmeal/llm": ["packages/llm/src"],
      "@oatmeal/templates": ["packages/templates/src"],
      "@oatmeal/integrations": ["packages/integrations/src"],
      "@oatmeal/storage": ["packages/storage/src"],
      "@oatmeal/learning": ["packages/learning/src"],
      "@oatmeal/telemetry": ["packages/telemetry/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build", "target"]
}