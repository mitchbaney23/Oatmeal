<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required for microphone access -->
    <key>com.apple.security.device.microphone</key>
    <true/>
    
    <!-- Required for system audio capture -->
    <key>com.apple.security.device.audio-input</key>
    <true/>
    
    <!-- Required for accessing system audio devices -->
    <key>com.apple.security.device.audio-output</key>
    <true/>
    
    <!-- Allow network connections for Ollama API -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Allow file system access for database and models -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Inherited entitlements -->
    <key>com.apple.security.app-sandbox</key>
    <true/>
    
    <!-- Allow access to user's home directory for database -->
    <key>com.apple.security.files.user-selected.read-only</key>
    <true/>
</dict>
</plist>